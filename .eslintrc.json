{
    "extends": "airbnb",
    "plugins": [
        "react",
        "jsx-a11y",
        "import",
        "jasmine"
    ],
    "parserOptions": {
      "ecmaVersion": 8
    },
    "env": {
      "browser": true,
      "jasmine": true
    },
    "parser": "babel-eslint",
    "settings": {
      "import/resolver": "webpack",
      "import/ignore": ["$three.*"]
    },
    "globals": {
      "ga": false,
      "browser": false,
      "Airbrake": false,
      "routes": false
    },
    "rules": {
      "quotes": ["error", "double"],
      "no-bitwise": "off",
      "no-mixed-operators": "off",
      "max-len": ["warn", 100],
      "no-underscore-dangle": ["error", { "allow": ["__guard__", "__range__"] }],
      "class-methods-use-this": "off",
      "operator-assignment": "warn",
      "react/jsx-filename-extension": "off",
      "no-restricted-syntax": "warn",
      "radix": "off",
      "no-restricted-properties": ["off", {"object": "Math", "property": "pow"}],
      "no-restricted-syntax": ["off", "ForInStatement", "ForOfStatement"],
      "no-param-reassign": "warn",
      "no-plusplus": "off"
    }
}
