# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# The home page
GET     /                                   controllers.Test.index
GET     /index                              controllers.Application.index

# Authentication
GET     /login                              controllers.Application.login
POST    /login                              controllers.Application.authenticate
GET     /logout                             controllers.Application.logout
GET     /register                           controllers.Application.register
POST    /register                           controllers.Application.registrate
GET     /verify/:key                        controllers.UserController.verify( key: String )

# User settings
POST    /user/configuration                 controllers.UserController.saveSettings
GET     /user/configuration                 controllers.UserController.showSettings

# Facebook
GET     /login/fb                           controllers.login.FacebookLogin.login
GET     /login/fb/code                      controllers.login.FacebookLogin.loginCode(code: String)

# Twitter
GET     /login/tw                           controllers.login.TwitterLogin.login

# Binary Data
GET     /binary/model/:model                controllers.BinaryData.model( model: String )
GET     /binary/polygons/:model             controllers.BinaryData.polygons( model: String )
GET			/binary/ws													controllers.BinaryData.requestViaWebsocket( dataSetId: String, cubeSize: Int )
POST    /binary/ajax				                controllers.BinaryData.requestViaAjax( dataSetId: String, cubeSize: Int )

# Game Stuff
GET     /game/initialize                    controllers.Game.initialize

# Route Stuff
GET     /route/initialize                   controllers.Route.initialize( dataSetId: String )
GET     /route/list                         controllers.Route.list
POST    /route/:id                          controllers.Route.blackBox(id: String)
GET			/route/:id													controllers.Route.getRoute(id: String)

# Branching
GET			/branch/list												controllers.Branch.list
GET			/branch/clear												controllers.Branch.clear

# Test pages
GET     /test/                              controllers.Test.index
GET     /test/demo                          controllers.Test.demo
GET     /test/tests                         controllers.Test.tests

#Performance test pages 
GET     /performance/timegridfs             controllers.PerformanceTest.timeGridFS
GET     /performance/timefiledatastore      controllers.PerformanceTest.timeFileDataStore

#Admin pages
GET     /admin/routevisual                  controllers.admin.RouteVisualisation.index

# Javascript routing
GET     /assets/javascripts/routes          controllers.Application.javascriptRoutes

# Map static resources from the /public folder to the /public path
GET     /assets/*file                       controllers.Assets.at(path="/public", file)

