# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# The home page
GET     /                                   controllers.Test.index
GET     /index                              controllers.Application.index

# Authentication
GET     /login                              controllers.Application.login
POST    /login                              controllers.Application.authenticate
GET     /logout                             controllers.Application.logout
GET     /register                           controllers.Application.register
POST    /register                           controllers.Application.registrate

# Facebook
GET     /login/fb                           controllers.login.FacebookLogin.login
GET     /login/fb/code                      controllers.login.FacebookLogin.loginCode(code: String)

# Twitter
GET     /login/tw                           controllers.login.TwitterLogin.login

# Binary Data
GET     /binary/model/:model                controllers.BinaryData.model(model: String)
GET     /binary/polygons/:model             controllers.BinaryData.polygons(model: String)
GET			/binary/ws/:model										controllers.BinaryData.requestViaWebsocket(model: String)
POST    /binary/data/:model                 controllers.BinaryData.requestViaAjax(model: String)

# Route Stuff
GET     /route/initialize                   controllers.Route.initialize
POST    /route/:id                          controllers.Route.blackBox(id: String)
GET			/route/:id													controllers.Route.getRoute(id: String)

# Branching
GET			/branch/list												controllers.Branch.list
GET			/branch/clear												controllers.Branch.clear

# Test pages
GET     /test/                              controllers.Test.index
GET     /test/demo                          controllers.Test.demo
GET     /test/tests                         controllers.Test.tests

#Admin pages 
GET     /admin/loadData                     controllers.Admin.loadData(x: Int, y: Int, z: Int)
GET     /admin/testbindoc                   controllers.Admin.testBinDoc
GET     /admin/testgridfs                   controllers.Admin.testGridFS
GET     /admin/createtestbindata            controllers.Admin.createTestBinData
GET     /admin/creategridfsdata             controllers.Admin.createGridFsData
GET     /admin/testdatastore                controllers.Admin.testDataStore
GET     /admin/cleanup                      controllers.Admin.cleanup
GET     /admin/fulltest                     controllers.Admin.fullTest

# Javascript routing
GET     /assets/javascripts/routes          controllers.Application.javascriptRoutes

# Map static resources from the /public folder to the /public path
GET     /assets/*file                       controllers.Assets.at(path="/public", file)

